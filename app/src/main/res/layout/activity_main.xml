            android:id="@+id/radio_group_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_3"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2_radioButton1" />

            <RadioButton
                android:id="@+id/radio_button_4"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2_radioButton2" />

            <RadioButton
                android:id="@+id/radio_button_5"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2_radioButton3" />

            <RadioButton
                android:id="@+id/radio_button_6"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q2_radioButton4" />
        </RadioGroup>

        <!-- Question 3 - RadioGroup-->
