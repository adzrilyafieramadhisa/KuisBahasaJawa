        <!-- Question 10 - Free question-->
        <TextView
            style="@style/questionStatements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q10_statement" />

        <EditText
            android:id="@+id/free_field"
            style="@style/freeField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/q10_free_field"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textAutoCorrect|textAutoComplete|textCapSentences" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_submit" />

            <!-- Reset Button -->
            <Button
                android:id="@+id/reset_button"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_reset"
