<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.r4dixx.m32o.MainActivity">

    <LinearLayout
        style="@style/linearLayoutTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Player Name - EditText -->
        <EditText
            android:id="@+id/name_field"
            style="@style/nameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/player_name_hint"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:inputType="textPersonName|textCapWords|textNoSuggestions" />

        <!-- Question 1 - RadioGroup -->
        <TextView
            style="@style/questionStatements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q1_statement" />

        <RadioGroup
            android:id="@+id/radio_group_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio_button_1"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q1_radioButton1" />

            <RadioButton
                android:id="@+id/radio_button_2"
                style="@style/questionAnswers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q1_radioButton2" />
        </RadioGroup>

        <!-- Question 2 - RadioGroup -->
        <TextView
            style="@style/questionStatements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/q2_statement" />

